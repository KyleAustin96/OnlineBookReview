@model OnlineBookReviews.Models.BookDetails

@{
    ViewBag.Title = "Details";
}

<h2>Rate Book</h2>
<style>
    .size{
        max-width: 50px;
    }
</style>
<div>
    @using (Html.BeginForm("RateBook", "BookDetails", new { id = Model.ISBN}, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.BookName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.BookName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Author)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Author)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.AddedOn)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.AddedOn)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt>
                Rating
            </dt>

            <dd>
                <input type="number" class="size" required="" max="5" name="Rating" />
            </dd>
        </dl>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="RateBook" class="btn btn-default" />
            </div>
        </div>
    }

</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>